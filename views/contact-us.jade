include ./head.jade
include ./navbar.jade
div(class="container")
  div(class="col-md-4")
  div(class="col-md-4")
    h1(style="margin-top: 130px;") Contact Us
    form
      .form-group
        label(for='name') Name
        input#name.form-control(type='text', placeholder='Enter your name')
      .form-group
        label(for='sender') Email
        input#sender.form-control(type='email', placeholder='Enter your email')
      .form-group
        label(for='subject') Subject
        input#subject.form-control(type='text', placeholder='Enter your subject')
      .form-group
        label(for='message') Message
        textarea#message(class="form-control", rows="5" placeholder='Enter your message')
      button.btn.btn-default(type='submit') Submit

  script(src="../bower_components/jquery/dist/jquery.min.js")
  script(src="../bower_components/bootstrap/dist/js/bootstrap.min.js")
  script.
      $('button').on('click', function (e) {
      e.preventDefault();
      var data = {
      name: $('#name').val(),
      sender: $('#sender').val(),
      subject: $('#subject').val(),
      message: $('#message').val()
      }
      $.ajax({
      method: 'POST',
      url: '/contact',
      data: data,
      success: function (res) {
      $('.message').show();
      },
      error: function () {
      console.log('Error sending message');
      window.location.replace('/');
      }
      });
      });

